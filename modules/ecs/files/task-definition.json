[
  {
    "name": "wordpress",
    "environment": [
      {
        "name": "WORDPRESS_DB_HOST",
        "value": "${mysql_endpoint}"
      },
      {
        "name": "WORDPRESS_DB_USER",
        "value": "${mysql_db_username}"
      },
      {
        "name": "WORDPRESS_DB_PASSWORD",
        "value": "${mysql_db_password}"
      },
      {
        "name": "WORDPRESS_DB_NAME",
        "value": "${mysql_db_name}"
      }
    ],
    "image": "${ecr_image_url}",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80
      }
    ],
    "memory": 500,
    "cpu": 10
  }
]
